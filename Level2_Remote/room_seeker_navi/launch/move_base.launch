<launch>
  <!-- Arguments -->
  <arg name="model" default="RoomSeeker" doc="model type"/>
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find room_seeker_navi)/param/costmap_common_params_$(arg model).yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find room_seeker_navi)/param/costmap_common_params_$(arg model).yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find room_seeker_navi)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find room_seeker_navi)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find room_seeker_navi)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find room_seeker_navi)/param/dwa_local_planner_params_$(arg model).yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
    <!-- <param name="global_frame" value="test"/> -->
    <!-- <param name="robot_base_frame" value="base_footprint"/> -->
  </node>
</launch>
